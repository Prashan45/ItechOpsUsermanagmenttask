@model IEnumerable<User_Role_Managment_System.Models.User_Model>

@{
    ViewData["Title"] = "UersProfile";
}

<h1>UersProfile</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfiePic)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image;base64,@Convert.ToBase64String(Model.First().ProfiePic)" alt="User Image" style="border-radius: 50%; width: 60px; height: 60px;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User_FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().User_FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User_Lastname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().User_Lastname)
        </dd>
       
    </dl>
</div>
